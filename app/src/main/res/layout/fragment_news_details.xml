<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.NewsDetailsFragment">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="@dimen/size_2"
        card_view:cardElevation="@dimen/size_2"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="@dimen/size_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="200dp"
                android:layout_marginTop="@dimen/size_20"
                android:layout_gravity="center"
                android:minHeight="200dp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="@dimen/size_10"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="@dimen/textSizeMedium" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/size_8"
                    android:paddingEnd="@dimen/size_8"
                    android:paddingRight="@dimen/size_8"
                    android:paddingBottom="@dimen/size_8"
                    android:text=""
                    android:layout_marginTop="@dimen/size_10"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textSizeUltraSmall" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>